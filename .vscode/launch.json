{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    // use gdb in linux and lldb in mac
    "version": "0.2.0",
    "configurations": [
        {
            "name": "(lldb) Launch",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/src/bin/lfortran",
            "args": ["examples/expr2.f90"],
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "(lldb-mi) Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/src/bin/lfortran",
            "args": ["examples/expr2.f90"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "lldb"
        },
    ]
}
