{
    "version": 3,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 23,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "default",
            "displayName": "Default configuration",
            "description": "Using Ninja",
            "generator": "Ninja",
            "binaryDir": "build/default"
        },
        {
            "name": "clang",
            "inherits": "default",
            "displayName": "Ninja Clang",
            "toolchainFile": "cmake/toolchains/clang.cmake"
        },
        {
            "name": "ci_build_tmp",
            "displayName": "Configuration used by CI",
            "generator": "Ninja",
            "binaryDir": "build/ci",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": { "type": "STRING", "value": "$env{BUILD_TYPE}" },
                "CMAKE_PREFIX_PATH": { "type": "PATH", "value": "$env{CONDA_PREFIX}"},
                "CMAKE_INSTALL_PREFIX": { "type": "PATH", "value": "$env{CONDA_PREFIX}"},
                "CMAKE_VERBOSE_MAKE_FILE": { "type": "BOOL", "value": "ON" },
                "WITH_LSP": {"type": "BOOL", "value": "yes" },
                "WITH_LLVM": {"type": "BOOL", "value": "yes" },
                "WITH_XEUS": {"type": "BOOL", "value": "yes" },
                "WITH_RUNTIME_STACKTRACE": { "type": "BOOL", "value": "$env{ENABLE_RUNTIME_STACKTRACE}"}
            }
        }
    ],
    "buildPresets": [
        {
            "name": "default",
            "configurePreset": "default"
        },
        {
            "name": "ci_build_tmp",
            "configurePreset": "ci_build_tmp"
        }
    ]
}